{
   "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
   "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
   },
   "files": {
      "ignoreUnknown": true,
      "includes": ["**", "!node_modules", "!.next", "!dist", "!build"]
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "single",
         "bracketSpacing": true
      }
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "suspicious": {
            "noUnknownAtRules": "off",
            "noArrayIndexKey": "off"
         },
         "nursery": {
            "useSortedClasses": {
               "level": "warn",
               "fix": "safe",
               "options": {
                  "attributes": ["className"],
                  "functions": ["cn"]
               }
            }
         }
      },
      "domains": {
         "next": "recommended",
         "react": "recommended"
      }
   },
   "assist": {
      "actions": {
         "source": {
            "organizeImports": "on"
         }
      }
   }
}
